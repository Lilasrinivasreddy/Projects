def fix_query_format(query):
    """
    Wraps schema and table names that contain special characters (`-`, `_`) in double quotes.
    """
    fixed_query = re.sub(r"(\b[a-zA-Z0-9_-]+\b)\.(\b[a-zA-Z0-9_-]+\b)\.(\b[a-zA-Z0-9_-]+\b)",
                         r'"\1"." \2"." \3"', query)
    print(f"üîç Fixed Query Format:\n{fixed_query}\n")
    return fixed_query
