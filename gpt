import teradatasql

# Define your Teradata connection parameters
HOST = "your_teradata_host"
USER = "your_username"
PASSWORD = "your_password"
DATABASE = "your_database"  # Optional, if needed

try:
    # Establish connection to Teradata
    conn = teradatasql.connect(host=HOST, user=USER, password=PASSWORD)
    print("✅ Connection to Teradata successful!")

    # Create a cursor object to execute SQL queries
    cursor = conn.cursor()

    # Example Query: Fetch first 5 rows from a table
    cursor.execute("SELECT TOP 5 * FROM your_table")

    # Fetch results
    results = cursor.fetchall()
    for row in results:
        print(row)  # Print each row

    # Close the cursor and connection
    cursor.close()
    conn.close()

except Exception as e:
    print(f"❌ Error connecting to Teradata: {e}")
