import re

def fix_query_format(query):
    """
    Wraps schema and table names that contain hyphens (`-`) in double quotes.
    Example:
    Before: vz-it-np-izcv-dev-idmcdo-0.dga_dq_tbls.dqaas_profile_rpt
    After:  "vz-it-np-izcv-dev-idmcdo-0"."dga_dq_tbls"."dqaas_profile_rpt"
    """
    fixed_query = re.sub(r"(\b[a-zA-Z0-9_-]+\b)\.(\b[a-zA-Z0-9_-]+\b)", r'"\1"." \2"', query)
    
    print(f"üîç Fixed Query Format:\n{fixed_query}\n")
    return fixed_query
